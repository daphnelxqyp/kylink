# 数据库配置
DATABASE_URL="mysql://user:password@localhost:3306/kyads_suffixpool"
SHADOW_DATABASE_URL="mysql://user:password@localhost:3306/kyads_suffixpool_shadow"

# NextAuth 配置
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:51001"

# API 配置
NEXT_PUBLIC_API_BASE_URL="http://localhost:51001"

# 代理服务配置（可选）
PROXY_API_URL=""
PROXY_API_KEY=""

# 定时任务密钥
CRON_SECRET="your-cron-secret-here"

# 是否允许在无代理时使用模拟数据（开发环境：true，生产环境：false）
# ⚠️ 生产环境必须设置为 false，否则会返回无效的追踪参数
ALLOW_MOCK_SUFFIX=false

# 批量接口最大条数（默认 500）
MAX_BATCH_SIZE=500

# 库存补货并发配置
STOCK_CONCURRENCY=5
CAMPAIGN_CONCURRENCY=3
